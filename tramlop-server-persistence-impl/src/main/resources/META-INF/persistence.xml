<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  
    <persistence-unit name="tramlopPersistenceUnit" transaction-type="JTA">
    	<jta-data-source>${data.source.jndi.name}</jta-data-source>
    	<exclude-unlisted-classes>true</exclude-unlisted-classes>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Employee</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Product</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Truck</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Driver</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Place</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Path</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Customer</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Task</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Agreement</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.AgreementPath</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.AgreementProduct</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.AgreementArrivalPlace</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.AgreementTruck</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.AgreementTruckSecondaryDriver</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Delivery</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.DeliveryTask</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Weighing</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Loading</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.Incident</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.IncidentType</class>
    	<class>org.cyk.system.tramlop.server.persistence.entities.IncidentResolution</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
		</properties>
    </persistence-unit>  
</persistence>